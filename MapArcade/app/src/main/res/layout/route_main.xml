<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/routelayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.zeedroid.maparcade.MainActivity"
        tools:showIn="@layout/app_bar_main">
    <ImageView
        android:id="@+id/route_image"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/route_text"
        android:textSize="30sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignTop="@+id/route_image"
        android:layout_alignLeft="@+id/route_image"
        android:gravity="top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF" />
    <Button
        android:id="@+id/route_create"
        android:text="@string/create_map_button"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/route_image"
        android:layout_alignLeft="@+id/route_image"/>
    <Button
        android:id="@+id/route_search"
        android:text="@string/search_map_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/route_create"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/route_image"
        android:layout_toRightOf="@id/route_create"/>
</RelativeLayout>